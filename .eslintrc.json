{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "linebreak-style": ["off"],
    "max-len": ["error", { "code": 300 }],
    "no-underscore-dangle": ["off"],
    "quotes": ["error", "single"],
    "no-console": "warn",
    "no-trailing-spaces": "error"
  }
}
